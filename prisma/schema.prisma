generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  email          String @unique
  password       String
  beersConsumed  Int    @default(0)
  litresConsumed Float  @default(0)
}
